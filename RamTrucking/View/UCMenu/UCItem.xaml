<UserControl x:Class="View.UCMenu.UCItem"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:fa="clr-namespace:FontAwesome.WPF;assembly=FontAwesome.WPF"
             mc:Ignorable="d" 
             d:DesignHeight="35" d:DesignWidth="200">
    <Grid Height="35" VerticalAlignment="Top" Name="itemPanel" Cursor="Hand" MouseEnter="itemPanel_MouseEnter" MouseLeave="itemPanel_MouseLeave">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="10"/>
            <ColumnDefinition/>
            <ColumnDefinition Width="4*"/>
            <ColumnDefinition/>
            <ColumnDefinition Width="10"/>
        </Grid.ColumnDefinitions>
        <fa:ImageAwesome Icon="Facebook" Width="15" VerticalAlignment="Center" HorizontalAlignment="Center" Grid.Column="1" Foreground="Black" Name="icon" />
        <TextBlock Grid.Column="2" Foreground="#000" FontWeight="Normal" FontSize="15" VerticalAlignment="Center" HorizontalAlignment="Left" Name="txtName"></TextBlock>        
        <TextBlock Grid.Column="3" Foreground="DarkBlue" FontWeight="Normal" FontSize="13" VerticalAlignment="Center" HorizontalAlignment="Left" Name="txtBadges"></TextBlock>        
    </Grid>
</UserControl>
